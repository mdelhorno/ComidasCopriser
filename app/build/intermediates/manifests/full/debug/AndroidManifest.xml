<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="miguel.comidas"
    android:versionCode="12"
    android:versionName="1.7" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logotipo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="miguel.comidas.Comidas"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="miguel.comidas.Comidas.StartComida" />
                <action android:name="miguel.comidas.Comidas.StartCena" />
            </intent-filter>
        </activity>
        <activity
            android:name="miguel.comidas.Ajustes"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="miguel.comidas.Acerca"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name="miguel.comidas.DBAdapter" />

        <receiver android:name="miguel.comidas.Notificador" />

        <service android:name="miguel.comidas.ServicioNotificador" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>